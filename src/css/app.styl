@font-face {
  font-family: 'Helvetica';
  src: url('~assets/fonts/Helvetica.otf') format("opentype");
}

body {
  font-family: 'Helvetica',sans-serif;
  word-wrap: break-word;
}

.page-cont {
  background-image: url('/statics/img/background.png');
  background-size: 55%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 0px -45px;
}

.cold {
  color:  #344245;
}

.dark-background {
  color: white;
  background: radial-gradient(circle, #344245 0%, #000709 70%);
  opacity:0.98;
}

.light-background {
  color: black;
  background: white;
}

.custom-card {
  min-width: 90%!important;
  min-height: 590px;padding-left: 8%;
  padding-top: 2%;
}

.qr {
  border-style: groove;
  border-width: 0.5px;
  width:100px;
  height: 100px;
  margin:auto;
  text-align: center;
  color: grey;
}

.sbId {
  font-size: 18px;
  letter-spacing: -2px;
  margin-bottom: 20px;
}

#f-size12 {
  font-size: 83%;
}
